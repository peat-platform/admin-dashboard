extends layout

block header
	include ./header-clear.jade

block main-container
	#login-overlay.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button", data-dismiss="modal")
					span(aria-hidden="true") Ã—
					span.sr-only Close
				h4.modal-title(id=myModalLabel) Login to OPENi-Admin-Dashboard
				div.errorMessage #{error}
			.modal-body
				.row
					.col-xs-6
						.well
							form(id="loginForm", method="POST", action="/admin/login", novalidate="novalidate")
								.form-group
									label(for="username", class="control-label") Username
									input(type="text", class="form-control", id="username", name="username", value="", required="", title="Please enter you username", placeholder="example@gmail.com")
									span.help-block
								.form-group
									label(for="password", class="control-label") Password
									input(type="password", class="form-control", id="password", name="password", value="", required="", title="Please enter your password")
									span.help-block
								#loginErrorMsg.alert.alert-error.hide Wrong username or password
								.checkbox
									label
										input(type="checkbox", name="remember", id="remember")
										span Remember login
									p.help-block (if this is a private computer)
								button(type="submit", class="btn btn-success btn-block") Login
								a(href="/admin/forgot/", class="btn btn-default btn-block") Help to login
					.col-xs-6
						p.lead Register now for 
							span.text-success FREE
						p
							a(href="/admin/register", class="btn btn-info btn-block") Yes please, register now!
